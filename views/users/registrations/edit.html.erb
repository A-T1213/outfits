<div class="user-edit">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

  <div class="file_field">
    <%=f.label :プロフィール画像%><br />
    <%= f.file_field :image %>
  </div>

    <div class="name-field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="grade-field">
    <%= f.label :学年%><br />
    <%= f.text_field :grade, autofocus: true %>
  </div>

  <div class="profile-field">
    <%= f.label :自己紹介%><br />
    <%= f.text_field :profile, autofocus: true %>
  </div>

  <div class="brand-field">
    <%= f.label :好きなブランド%><br />
    <%= f.text_field :brand, autofocus: true %>
  </div>

    <div class="email-field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="password-field">
      <%= f.label :password %> <i>(変更しない場合には空欄のままにして下さい)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>

    <div class="password_confirmation-field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="current_password-field">
      <%= f.label :current_password %> <i>(変更を確定するにはパスワードが必要です)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>


  <p> <%= button_to "Account Delete", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
  <%= link_to "Back", :back %>
